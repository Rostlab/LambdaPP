{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "start",
            "label": "yarn:start",
            "detail": "react-scripts start",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "BROWSER": "none"
                }
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "webpack",
                "severity": "error",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                        "regexp": "ERROR in (.*) (.*):([0-9]*)-([0-9]*)",
                        "file": 1,
                        "line": 2,
                        "column": 3
                    },
                    {
                        "regexp": ".*",
                        "message": 0
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Compiling...", // Signals the begin of the Task
                    "endsPattern": "webpack compiled .*" //  Signals that now the initialization of the task is complete
                }
            }
        }
    ]
}
